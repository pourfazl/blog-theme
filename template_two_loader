    <script>
    window.addEventListener('DOMContentLoaded', function() {
        // Get the URL details
        const currentPath = window.location.pathname;
        const hasQueryParams = window.location.search.length > 0; // Checks if there are query parameters

        // If NOT the exact homepage, prevent the overlay from loading
        if (!(window.location.origin === "https://lowpass.blogfa.com" && currentPath === "/" && !hasQueryParams)) {
            const overlay = document.getElementById('welcome-overlay');
            if (overlay) {
                overlay.remove(); // Completely remove it before it appears
            }
            return; // Stop further execution
        }

        //  Show & Hide Overlay ONLY on the exact homepage
        setTimeout(function() {
            const overlay = document.getElementById('welcome-overlay');
            if (overlay) {
                overlay.style.opacity = '0';
                setTimeout(() => overlay.remove(), 500); // Fade out & remove
            }
        }, 2000); // Display for 2 seconds
    });
</script>








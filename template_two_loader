    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const dates = document.querySelectorAll('.post-title, .post-date');
        const arabicNumbers = ['٠','١','٢','٣','٤','٥','٦','٧','٨','٩'];
        
        dates.forEach(dateEl => {
            dateEl.textContent = dateEl.textContent.replace(/\d/g, d => arabicNumbers[d]);
        });
    });
</script>

